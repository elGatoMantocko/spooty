<ul class="results" data-autocomplete-id="#{{autocompleteId}}">
    {{#each results}}
        <li class="results-item">
            <a href="#" data-id="{{id}}" class="{{#if @first}}highlight{{/if}}" data-value="{{value}}">
                <div class="details">{{{display_value}}}</div>
                {{#if opt_display_value}}<div class="optional-details">Curated by {{{opt_display_value}}}</div>{{/if}}
            </a>
        </li>
    {{/each}}
</ul>

