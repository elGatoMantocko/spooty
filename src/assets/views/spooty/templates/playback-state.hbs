<div class="card">
  <div class="card-block">
    {{#if track_window}}
      <h5 class="card-title">{{ track_window.current_track.name }}</h5>
      {{#each track_window.current_track.artists}}
        <h6 class="card-subtitle mb-2 text-muted">{{ name }}</h6>
      {{/each}}
    {{else}}
      <h5 class="card-title">Nothing Playing</h5>
    {{/if}}
  </div>
</div>
